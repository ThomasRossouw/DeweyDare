<Window x:Class="PROG7312_ST10121910.Knowing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7312_ST10121910"
        mc:Ignorable="d"
        Title="Knowing" Height="600" Width="1000"
    WindowStartupLocation="CenterScreen">


    <Grid Background="#545454">

        <Image HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200" Source="/TBG (1).png"/>
        <StackPanel Orientation="Horizontal" Height="91" VerticalAlignment="Top" HorizontalAlignment="Left"  Width="122" Margin="848,10,0,0">
            <Button x:Name="Close"   BorderBrush="#00707070"    RenderTransformOrigin="0.553,0.507" Height="68" Width="75" Click="Close_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="1.268"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Background>
                    <ImageBrush ImageSource="/close.png"/>
                </Button.Background>


            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Height="72" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Width="432">
            <Button  MinWidth="100" Margin="10,5,0,0" BorderBrush="#00707070" Click="ButtonHome_Click" Width="69" Height="73"  >
                <Button.Background>
                    <ImageBrush ImageSource="/outline_home_white_24dp.png"/>
                </Button.Background>


            </Button>
            <Button x:Name="ButtonBook"  MinWidth="100" Margin="10,5,0,0" BorderBrush="#00707070" Width="32" Height="60" Click="ButtonBook_Click" >
                <Button.Background>
                    <ImageBrush ImageSource="/books.png"/>
                </Button.Background>


            </Button>
            <Button x:Name="ButtonMix"  MinWidth="100" Margin="10,5,0,0" BorderBrush="#00707070" Width="32" Height="60" Click="ButtonMix_Click"  >
                <Button.Background>
                    <ImageBrush ImageSource="/match.png"/>
                </Button.Background>


            </Button>
            <Button x:Name="ButtonQuiz"  MinWidth="100" Margin="10,5,0,0" BorderBrush="#00707070" Width="24" Height="60"  Click="ButtonQuiz_Click"  >
                <Button.Background>
                    <ImageBrush ImageSource="/quiz.png"/>
                </Button.Background>


            </Button>
        </StackPanel>

        <ListView Margin="209,150,0,0" Name="ListViewQuiz" HorizontalAlignment="Left" VerticalAlignment="Top" Width="297" Height="197" IsEnabled="false">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
           
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>


        <Label x:Name="lbQuestionTitle" Content="QUESTION" HorizontalAlignment="Left" Margin="56,88,0,0" VerticalAlignment="Top"  FontSize="14" FontFamily="Yu Gothic UI Light" Foreground="White" RenderTransformOrigin="1.905,1.759" />
        <Label x:Name="lbQuestion" Content="Label" HorizontalAlignment="Left" Margin="65,112,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Yu Gothic UI Light" Foreground="White" Visibility="Hidden"/>
        <Label x:Name="lbAnswerTitle" Content="ANSWER OPTIONS" HorizontalAlignment="Left" Margin="56,146,0,0" VerticalAlignment="Top"  FontSize="14" FontFamily="Yu Gothic UI Light" Foreground="White" RenderTransformOrigin="1.905,1.759" />
        <TextBlock x:Name="tbHowTo" Text="How To Play?" HorizontalAlignment="Left" Margin="715,125,0,0" VerticalAlignment="Top"  FontSize="18" FontFamily="Yu Gothic UI Light" Foreground="White" TextDecorations="Underline" RenderTransformOrigin="0.758,0.533" />
        <Button   x:Name="btStartQuiz" Content="START QUIZ" HorizontalAlignment="Left" Margin="56,382,0,0" VerticalAlignment="Top" Width="100" Height="40" FontSize="16" FontFamily="Yu Gothic UI Light" RenderTransformOrigin="0.14,0.475" Click="btStartQuiz_Click" />
        <Button   x:Name="btStartQuizDisabled" Content="NEXT QUESTION" HorizontalAlignment="Left" Margin="56,382,0,0" VerticalAlignment="Top" Width="100" Height="40" FontSize="16" FontFamily="Yu Gothic UI Light" RenderTransformOrigin="0.14,0.475" Click="btStartQuiz_Click" IsEnabled="False" Visibility="Hidden"/>
        <Button   x:Name="btEndQuiz" Content="END QUIZ" HorizontalAlignment="Left" Margin="253,382,0,0" VerticalAlignment="Top" Width="100" Height="40" FontSize="16" FontFamily="Yu Gothic UI Light" RenderTransformOrigin="0.14,0.475" Visibility="Visible" Click="btEndQuiz_Click" />
        <Button   x:Name="btEndQuizDisabled" Content="END QUIZ" HorizontalAlignment="Left" Margin="253,382,0,0" VerticalAlignment="Top" Width="100" Height="40" FontSize="16" FontFamily="Yu Gothic UI Light" RenderTransformOrigin="0.14,0.475" Visibility="Visible" IsEnabled="False"/>

        <TextBlock HorizontalAlignment="Left" Margin="584,174,0,0" TextWrapping="Wrap" FontSize="12" FontFamily="Yu Gothic UI Light" Foreground="White" VerticalAlignment="Top" Height="383" Width="362"><Run Text="This game is designed to teach you how to find a specific book call number in the dewey decimal classification h"/><Run Text="ier"/><Run Text="archy through a quiz."/><LineBreak/><LineBreak/><Run Text="- To start the game click the START QUIZ button."/><LineBreak/><Run Text="- The current hierarchy level call number options are displayed as a list presented under the ANSWER OPTIONS label. Find the path to the call number displayed under the QUESTION label through DOUBLE CLICKING the correct call number at each hierarchy level."/><LineBreak/><Run Text="- A new hierarchy level is unlocked only if the relative call number is selected for the current hierarchy level."/><LineBreak/><Run Text="- If you select the wrong call number at any level the question will be declared over and full points will not be achieved."/><LineBreak/><Run Text="- To win the game, you must race against the clock to earn 1"/><Run Text="00"/><Run Text=" points with in 5 minutes."/><LineBreak/><Run Text="If time runs out before completing a question you can still complete the question."/><LineBreak/><Run Text="- Each top level hierarchy question answered correct earns you 5 points and finding the call number earns you 10 points for a possible total of 15 points a round."/><LineBreak/><Run Text="- Compete against your PERSONAL BEST or for the CHAMPION position against your fellow library members by achieving the most points during the timed quiz."/></TextBlock>
        <TextBlock x:Name="tbCurrentScore" Text="0" HorizontalAlignment="Left" Margin="50,506,0,0" VerticalAlignment="Top"  FontSize="16" FontFamily="Yu Gothic UI Light" Foreground="White" RenderTransformOrigin="1.388,-0.812" Visibility="Visible" Width="70"/>
        <TextBlock x:Name="tbCurrentPoint" Text="POINTS" HorizontalAlignment="Left" Margin="50,433,0,0" VerticalAlignment="Top"  FontSize="12" FontFamily="Yu Gothic UI Light" Foreground="White" />
        <Label x:Name="lbNumQTitle" Content="1/2" HorizontalAlignment="Left" Margin="326,150,0,0" VerticalAlignment="Top"  FontSize="14" FontFamily="Yu Gothic UI Light" Foreground="White" RenderTransformOrigin="1.905,1.759" Visibility="Hidden"/>
    </Grid>

</Window>
